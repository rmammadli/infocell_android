<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@color/white" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingLeft="@dimen/margin_large"
            android:paddingRight="@dimen/margin_large" >

            <ImageView
                android:id="@+id/imgAboutLogo"
                android:layout_width="162dip"
                android:layout_height="42dip"
                android:layout_marginBottom="@dimen/margin_large"
                android:background="@drawable/inf_ic_text" />

            <TextView
                android:id="@+id/tvAboutInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_normal"
                android:text="Müştəri xidmətləri:"
                android:textSize="@dimen/TextSizeMedium"
                android:fontFamily="Arial" />

            <TextView
                android:id="@+id/tvAboutPhone1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_normal"
                android:text="(012) 404 31 31"
                android:textColor="@color/h_blue"
                android:textSize="@dimen/TextSizeMedium" 
                android:fontFamily="Arial"/>

            <TextView
                android:id="@+id/tvAboutPhone2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_normal"
                android:text="(051) 404 31 31"
                android:textColor="@color/h_blue"
                android:textSize="@dimen/TextSizeMedium"
                android:fontFamily="Arial" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="bottom"
        android:orientation="vertical" >
    </RelativeLayout>

</LinearLayout>